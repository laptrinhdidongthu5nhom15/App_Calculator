<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp">
    <Button
        android:textSize="20sp"
        android:text="Back"
        android:id="@+id/btn_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_below="@id/btn_Back"
        android:orientation="horizontal"
        android:id="@+id/ln_Layouttren"
        android:weightSum="3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="10dp">
        <Button
            android:background="#348AE7"
            android:textStyle="bold"
            android:layout_weight="1"
            android:id="@+id/btn_DoDai"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ðộ dài"/>
        <Button

            android:layout_weight="1"
            android:id="@+id/btn_KhoiLuong"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khối lượng"/>
        <Button

            android:layout_weight="1"
            android:id="@+id/btn_ThoiGian"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian"/>

    </LinearLayout>

    <TextView

        android:layout_marginTop="10dp"
        android:layout_below="@+id/ln_Layouttren"
        android:layout_marginLeft="5dp"
        android:id="@+id/tv_InputTextLenght1"
        android:hint="000"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RadioGroup
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/tv_InputTextLenght1"
        android:id="@+id/rdgroup_tren"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:textSize="20sp"
            android:id="@+id/rdbtn_KM"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:text="km" />
        <RadioButton
            android:textSize="20sp"
            android:checked="false"
            android:text="m"
            android:id="@+id/rdbtn_M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:textSize="20sp"
            android:checked="false"
            android:text="cm"
            android:id="@+id/rdbtn_CM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/tv_InputTextLenght1"
        android:id="@+id/tv_OutputTextLenghtResult"
        android:layout_marginTop="50dp"
        android:hint="000"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:layout_below="@+id/tv_OutputTextLenghtResult"
        android:layout_marginLeft="5dp"

        android:id="@+id/rdgroup_duoi"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:textSize="20sp"
            android:checked="false"
            android:text="km"
            android:id="@+id/rdbtn_KMDuoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:textSize="20sp"
            android:checked="true"
            android:text="m"
            android:id="@+id/rdbtn_MDuoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:textSize="20sp"
            android:checked="false"
            android:text="cm"
            android:id="@+id/rdbtn_CMDuoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <LinearLayout
        android:layout_marginTop="200dp"
        android:layout_below="@+id/ln_Layouttren"
        android:orientation="horizontal"
        android:id="@+id/lnLayoutduoi"
        android:weightSum="6"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <Button
            android:id="@+id/btn_AC"
            android:textSize="30sp"
            android:text="AC"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="C"
            android:textSize="30sp"
            android:id="@+id/btn_C"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="5dp"
        android:layout_below="@+id/lnLayoutduoi"
        android:orientation="horizontal"
        android:id="@+id/lnLayoutduoi2"
        android:weightSum="3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <Button
            android:id="@+id/btn_So7"
            android:text="7"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_So8"
            android:text="8"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_So9"
            android:text="9"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="5dp"
        android:layout_below="@+id/lnLayoutduoi2"
        android:orientation="horizontal"
        android:id="@+id/lnLayoutduoi3"
        android:weightSum="3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <Button
            android:id="@+id/btn_So4"
            android:text="4"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_So5"
            android:text="5"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_So6"
            android:text="6"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="5dp"
        android:layout_below="@+id/lnLayoutduoi3"
        android:orientation="horizontal"
        android:id="@+id/lnLayoutduoi4"
        android:weightSum="3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <Button
            android:id="@+id/btn_So1"
            android:text="1"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_So2"
            android:text="2"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_So3"
            android:text="3"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout

        android:layout_marginTop="5dp"
        android:layout_below="@+id/lnLayoutduoi4"
        android:orientation="horizontal"
        android:id="@+id/lnLayoutduoi5"
        android:weightSum="6"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <Button
            android:id="@+id/btn_So0"
            android:text="0"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_DauCham"
            android:text="."
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>